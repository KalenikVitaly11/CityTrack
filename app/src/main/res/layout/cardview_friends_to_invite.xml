<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/friend_cardview_user_photo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="16dp"
        android:background="@color/com_facebook_blue" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/friend_cardview_user_photo">

        <TextView
            android:id="@+id/friend_cardview_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Имя Фамилия"
            android:textColor="@color/grey_424242"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/friend_cardview_network_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:layout_alignLeft="@+id/friend_cardview_user_name"
            android:layout_below="@id/friend_cardview_user_name"
            android:background="@color/com_facebook_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_cardview_user_name"
            android:layout_toRightOf="@id/friend_cardview_network_icon"
            android:fontFamily="sans-serif"
            android:text="Ваш друг с Facebook"
            android:textColor="@color/grey_424242"
            android:textSize="12sp" />
        <Button
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/friend_cardview_network_icon"
            android:layout_alignParentEnd="true"
            android:textSize="8dp"
            android:textAllCaps="false"
            android:background="@drawable/invite_friend_button"
            android:textColor="@color/vk_white"
            android:text="Пригласить"
            />
    </RelativeLayout>
</RelativeLayout>